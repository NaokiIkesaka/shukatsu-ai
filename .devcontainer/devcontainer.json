{
    "name": "edinet-rag",
    "dockerComposeFile": ["docker-compose.yaml"],
    "service": "app",
    "runServices": ["app","db"],
    "mounts": [
      {
        "type": "volume",
        "source": "poetry-cache",
        "target": "/home/vscode/.cache/pypoetry"
      },
      {
        "type": "volume",
        "source": "pyyright-cache",
        "target": "/home/vscode/.cache/pyright-python"
      },
      {
        "type": "volume",
        "source": "venv-cache",
        "target": "${containerWorkspaceFolder}/.venv"
      }
    ],
    "workspaceFolder": "/workspace",
    "features": {
      "ghcr.io/devcontainers-contrib/features/poetry": {
        "version": "latest"
      }
    },
    "postAttachCommand": "sudo chown -R pn /home/vscode/.cache/pypoetry /home/vscode/.cache/pyright-python ${containerWorkspaceFolder}/.venv && poetry config virtualenvs.in-project true && poetry install",
    "remoteUser": "pn",
    "customizations": {
      "vscode": {
        "settings": {
          "python.defaultInterpreterPath": "/workspace/.venv/bin/python",
        "git.openRepositoryInParentFolders": "always"
        },
        "extensions": [
          "ms-python.python",
          "ms-python.vscode-pylance",
          "streetsidesoftware.code-spell-checker",
          "charliermarsh.ruff",
          "tamasfe.even-better-toml",
          "ms-azuretools.vscode-docker",
          "github.vscode-pull-request-github",
          "ms-vsliveshare.vsliveshare",
          "mhutchie.git-graph",
          "GitHub.copilot",
          "eamodio.gitlens"
        ]
      }
    },
	"postCreateCommand": "npm install"

  }